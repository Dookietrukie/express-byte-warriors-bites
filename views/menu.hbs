<h2>List of Pizzas:</h2>

{{#each pizzas}}
    {{#if this.price}}
        <section>
            <h2>{{this.title}}</h2>
            <h3>Price: {{this.price}}</h3>
            <img src="/images/{{this.imageFile}}">
        </section>
    {{else}}
        <section>
            <h2>{{this.title}}</h2>
            <img src="/images/{{this.imageFile}}">
        </section>
    {{/if}}
{{/each}}